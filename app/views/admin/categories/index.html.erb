<% content_for :sidebar do %>
<div class="box">
	<%= link_to "Dodaj kategoriÄ™!", new_admin_category_path, :class => "more" %>
</div>
<% end %>
<div class="box">
	<div>
		<div class="title">
			<h2>Kategorie</h2>
		</div>
		<ul class="list" id="categories">
			<% @categories.each do |category| %>
				<li class="<%= cycle('normal', 'alt') %>" id="category_<%= category.id %>">
					<img src="/images/drag.gif" width="11" height="11" alt="Drag" class="handle" />
					<%= link_to category.name, edit_admin_category_path(category) %>
				</li>
			<% end %>
		</ul>
		
		<div class="loader"></div>
	</div>
</div>