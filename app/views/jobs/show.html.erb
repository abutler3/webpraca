<% title [@job.localization.name, @job.company_name, @job.title] %>

<h2><%= @job.title %></h2>

<p>
	<%= job_label(@job) %> dla <%= link_to @job.company_name, @job.website, :target => "_blank" %> / <%= @job.localization.name %>
</p>

<p>
	Dodano <abbr title="<%= @job.created_at.xmlschema %>"><%= distance_of_time_in_words_to_now @job.created_at %> temu</abbr><br/>
	Do wygaśnięcia zostało <abbr title="<%= @job.end_at.xmlschema %>"><%= distance_of_time_in_words_to_now(@job.end_at) %></abbr><br/>
	Wyświetlona: 0 <%#= @job.visits_count %> razy
</p>

<%= RedCloth.new(@job.description).to_html %>
<p>
<% if permitted_to? :edit, @job %>
	<%= link_to 'Edytuj', edit_job_path(@job) %> |
	<%= link_to 'Wstecz', jobs_path %>
<% end %>
</p>